{
  "name": "guangqing-temple-accounting",
  "version": "1.0.0",
  "description": "廣清宮快速記帳軟體 - 專為宮廟設計的記帳系統",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "node build-netlify.js && vite build",
    "build:netlify": "node build-netlify.js && vite build",
    "build:local": "vite build",
    "preview": "vite preview --host",
    "serve": "vite preview --port 3000",
    "clean": "rimraf dist node_modules/.vite",
    "reinstall": "rimraf node_modules package-lock.json && npm install",
    "clean-install": "rmdir /s /q node_modules 2>nul & del package-lock.json 2>nul & npm cache clean --force & npm install --legacy-peer-deps",
    "force-install": "npm install --legacy-peer-deps --force"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "element-plus": "^2.4.0",
    "echarts": "^5.4.3",
    "dayjs": "^1.11.10",
    "@element-plus/icons-vue": "^2.3.0",
    "@supabase/supabase-js": "^2.44.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "rimraf": "^5.0.5"
  },
  "keywords": [
    "temple",
    "accounting",
    "宮廟",
    "記帳",
    "財務管理",
    "vue3",
    "vite",
    "pinia"
  ],
  "author": "廣清宮開發團隊",
  "license": "MIT"
}